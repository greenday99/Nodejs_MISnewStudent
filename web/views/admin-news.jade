//doctype html
extends admin

block admin-news
    section#news
      .section-title.text-center.wow.fadeInDown
        h2 最新消息

      .container
        table#btnBlock.table(width="100%")
          tr
            td.preBtn
              a#newsPre.sl-pre(href="javascript:void(0);" onClick="goPreNews()" style="display:block;")
                i.fa.fa-angle-left.fa-4x
            td.nextBtn
              a#newsNext.sl.next(href="javascript:void(0);" onClick="goNextNews()" style="display:none;")
                i.fa.fa-angle-right.fa-4x

        table#newsBlock.table(width="100%")
          tr
            th.news-title
          tr
            td.btnArea
              a#editNewsDetail.btn.btn-primary(href='#', data-toggle='modal', data-target='#editDetail' data-newsDetail='') 修改
              a#editTimeLineBtn.btn.btn-warning(href='#', data-toggle='modal', data-target='#editTimeLine' data-newsTimeline='') 修改本條時間軸
          tr
            td.news-classPubTime
          tr
            td.news-content

      #visualization
    //
      End #News
      ==========================
